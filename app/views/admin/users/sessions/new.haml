.row
  .col-md-3
  .col-md-6
    .panel.panel-blue.margin-bottom-40
      .panel-heading
        %h3.panel-title
          %i.fa.fa-tasks
          Basic Form
      .panel-body
        %form.margin-bottom-40{:role => "form"}
          .form-group
            %label{:for => "exampleInputEmail1"} Email address
            %input#exampleInputEmail1.form-control{:placeholder => "Enter email", :type => "email"}/
          .form-group
            %label{:for => "exampleInputPassword1"} Password
            %input#exampleInputPassword1.form-control{:placeholder => "Password", :type => "password"}/
          .checkbox
            %label
              %input{:type => "checkbox"}/
              Check me out
          %button.btn-u.btn-u-blue{:type => "submit"} Submit